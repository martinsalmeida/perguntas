<%- include ("partials/header") %>
  <body>
    <%- include ("partials/navbar") %>
    <div class="container mt-5">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <textarea placeholder="Digite a sua resposta" class="form-control" name="corpo" required></textarea>
            <button type="submit" class="btn btn-success mt-3">Responder</button>
            <input name="perguntaId" hidden value="<%= pergunta.id %>"></input>
        </form>
        <hr>
        <h3>Respostas</h3>
        <%  respostas.forEach ( respostas =>{ %>
          <div class="card mt-3">
            <div class="card-body">
              <p><%= respostas.corpo %></p>
            </div>
          </div>
        <% }) %>
    </div>
    
  </body>
  <%- include ("partials/footer") %>

